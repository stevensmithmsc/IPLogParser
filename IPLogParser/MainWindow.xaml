<Window x:Class="IPLogParser.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:IPLogParser"
        mc:Ignorable="d"
        Title="Inpatient Log File Viewer" Height="500" Width="725">
    <Window.DataContext>
        <local:TheLog/>
    </Window.DataContext>
    <Grid>
        <StackPanel ClipToBounds="True">
            <TextBox Text="{Binding stupidString, Mode=OneWay}" />
        
            <ListView ItemsSource="{Binding LogList}" ScrollViewer.CanContentScroll="True" ScrollViewer.VerticalScrollBarVisibility="Visible" Height="400"/>
            <StatusBar HorizontalAlignment="Left" Height="20" VerticalAlignment="Bottom">
                <TextBlock Text="{Binding LogList.Count, Mode=OneWay}" />
                <Separator />
                <TextBlock Text="{Binding noErrors, Mode=OneWay}" />
            </StatusBar>
        </StackPanel>
        

    </Grid>
</Window>
